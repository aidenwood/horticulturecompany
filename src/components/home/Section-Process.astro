---
const services = [
{
   step: '01',
   name: 'Weddings',
   alt: 'Wedding Festoon Lighting Installation Gold Coast',
   description:
     'Make your special day truly shine with quality festoon & fairy light hire for weddings.',
   link: '/services/weddings',
 },
 {
   step: '02',
   name: 'Commercial Events',
   alt: 'Commercial Event Lighting and Professional Installation',
   description:
     'Professional lighting solutions for high-grade corporate events and product launches.',
   link: '/services/commercial',
 },
 {
   step: '03',
   name: 'Festival',
   alt: 'Festival and Event Lighting Installation Gold Coast',
   description:
     'Creating vibrant atmospheres and a sense of direction for festivals through lighting.',
   link: '/services/festivals',
 },
 {
   step: '04',
   name: 'Bars & Restaurants',
   alt: 'Bar and Restaurant Outdoor Lighting Solutions',
   description:
     'Expert lighting installations for key events in bars and outdoor event spaces.',
   link: '/services/hospitality',
 },
];
---

<section class="my-24">
  <div class="mx-auto px-4 sm:px-6 w-full lg:max-w-7xl lg:px-8">
    <div class="">
      <div class="w-full text-center">
        <h2 class="text-base lg:text-lg uppercase font-thin tracking-widest pb-4">
          Services
        </h2>
      </div>
      
      <div class="grid gap-6 grid-cols-1 sm:grid-cols-2">
        {
          services.map((service) => (
          <a rel="canonical" href={service.link}>  
            <div class="bg-secondary-400/10 hover:bg-secondary-600/20 dark:bg-secondary-800/40 dark:hover:bg-secondary-600/50 border-primary-900/10 dark:border-primary-300/10 hover:dark:bg-primary-300/10 duration-200 rounded-3xl border px-6 py-8 lg:py-12 h-full flex flex-col justify-center gap-4">
              <div class="w-full flex flex-row-reverse sm:flex-col md:flex-row-reverse items-center justify-center gap-6">
                
                
                <div class="w-full mx-auto md:ml-2 flex flex-col gap-4">
                  <p class="hidden md:block text-sm">{service.step}</p>
                  <h3 class="text-left text-xl xs:text-2xl md:text-3xl tracking-tight font-medium">{service.name}</h3>
                  <p class="block text-primary-950 dark:text-primary-200 text-base xs:text-lg pr-4 leading-6">
                    {service.description}
                  </p>
                </div>
                
              </div>
            </div>
          </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
