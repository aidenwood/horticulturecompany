---
// RelatedProducts.astro
// This component displays related products for rental products

// Define the props with TypeScript interface
interface RelatedProduct {
  id: string;
  name: string;
  description: string;
  productimg: string;
  alt: string;
  link: string;
}

interface Props {
  relatedProducts: RelatedProduct[];
  title?: string;
  viewAllText?: string;
  productsPath?: string;
}

// Get props with defaults
const { 
  relatedProducts, 
  title = "Related Products",
  viewAllText = "View All Products",
  productsPath = "/products"
} = Astro.props;
---
<style>
    #contain {
        max-width: 1920px;
    }
</style>
<div class="bg-secondary-950">
  <div id="contain" class="w-full mx-auto px-4 py-16 lg:py-32">
    <h2 class="text-2xl font-bold text-center mb-6 text-white">{title}</h2>
    
    <!-- Related Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {relatedProducts.map((product) => (
        <div class="bg-secondary-900 rounded-lg shadow-md overflow-hidden transition-transform text-white">
          <div class="relative">
            <img 
              src={product.productimg} 
              alt={product.alt || product.name} 
              class="w-full h-48 object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold">{product.name}</h3>
            <p class="text-gray-300 my-3">{product.description}</p>
            <a 
              href={product.link} 
              class="inline-block mt-3 py-2 px-4 bg-secondary-600 duration text-white rounded-full font-medium transition-colors"
            >
              View Details
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View All Products Link -->
    <div class="mt-8 text-center">
      <a 
        href={productsPath}
        class="text-white rounded-full bg-primary-600 transition mr-2 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 border border-transparent dark:focus-visible:outline-primary-400 dark:hover:bg-primary-300 focus-visible:outline-primary-600 font-medium hover:bg-primary-700 inline-flex items-center justify-center px-5 py-3 text-base"
      >
        {viewAllText}
      </a>
    </div>
  </div>
</div>