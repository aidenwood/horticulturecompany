---

/* Import the Services JS Data file */
import { services } from '../../content/hardscapes-detailed.js';

---
<style>
  .main-carousel { width: 100%; }
  .main-carousel.is-expanded { width: 100%; }
  
  #contain { max-width: 1980px !important; }
  
  /* Image cover settings for consistent sizing */
  .image-cover {
    width: 100%;
    height: 180px; /* Fixed height for all images */
    position: relative;
    overflow: hidden;
    margin-bottom: 1rem;
  }
  
  .image-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* This makes the image cover the entire container */
    object-position: center; /* Centers the image within the container */
  }
</style>

<section class="my-24">
  <div id="contain" class="mx-auto w-full">
    <!-- Perfect Slider Velocity8 - Start -->
    <div id="border" class="">
      <div class="grid grid-cols-2 lg:grid-cols-3 gap-6 px-4 sm:px-6 lg:px-8">
        {
          products.map((service) => (
            <div class="carousel-cell h-full rounded-2xl text-white bg-secondary-950 dark:bg-primary-700/10 duration-200 hover:bg-secondary-600 hover:dark:bg-primary-700/20 border-2 border-secondary-200 flex flex-col xl:flex-row items-center lg:items-center justify-center p-6">
              <div class="w-full h-auto mx-auto flex flex-col items-center">
                <div id="imageCover" class="image-cover rounded-xl">
                  <img
                    src={service.img}
                    alt={service.alt}
                  />
                </div>
                <h2 class="hidden xl:block text-center md:text-left text-lg lg:text-xl font-medium">{service.name}</h2>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>